<%- include('partials/header') -%>


<form action="">
    <div class="container-fluid p-5">
      <div class="row">
        <div class="col">
          <div class="card-body bg-light justify-content-center">
            <div class="row">
              <div class="col-lg-3">
                <img src="../images/image1.png" style="display: inline-block; height: 15rem; width: 15rem;" alt="">
                <div class="p-4 text-center">
                  <div class="row">
                    <div class="col-6">
                      
                      <button type="submit" id="edit" class="btn btn-warning py-2">Edit</button>
                    </div>
                    <div class="col-6">
                      <button type="submit" disabled id="nexSumit" class="btn p-2 f btn-warning py-2">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-9">
                <div class="row">
                  <div class="col-6">
                    <label for="name">Product Name</label>
                    <div class="input-group mb-3">
                      <input type="text" value="Iphone 12" name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                    <label for="name">Product Discription</label>
                    <div class="input-group mb-3">
                      <input type="text" value="New phone with best processor.Fastest phone ever." name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                    <label for="name">Product Catagory</label>
                    <div class="input-group mb-3">
                      <input type="text" value="Phone" name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                    <label for="name">Product Brand</label>
                    <div class="input-group mb-3">
                      <input type="text" value="Apple" name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                    
                  </div>
                  <div class="col-6">
                    <label for="name">Product Quantity</label>
                    <div class="input-group mb-3">
                      <input type="text" value="10" name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                    <label for="name">Product Price</label>
                    <div class="input-group mb-3">
                      <input type="text" value="Nrs.120000" name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                    <label for="name">Product Size</label>
                    <div class="input-group mb-3">
                      <input type="text" value="5.5inch" name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                    <label for="name">Product Image</label>
                    <div class="input-group mb-3">
                      <input type="text" value="..images/image1.png" name="name" disabled class="form-control f" id="nextSumit">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
  
        </div>
      </div>
    </div>
  </form>
  
<script type="text/javascript">
  $(document).ready(function(){
    $('#edit').click(function(){
  
      $('.f').removeAttr('disabled')
    });
    $('#submit').click(function(){
      $('#nextsumit').attr("disabled", "disabled");
    })
  
  
  })
</script>

